{
	"name": "dynamodb.system_errors: ${table_name}",
	"type": "metric alert",
	"query": "sum(last_5m):sum:aws.dynamodb.system_errors{tablename:${table_name}} by {tablename} > 0",
	"message": "dynamodb system errors monitor triggered for ${table_name}. Notify: ${notification_targets}",
	"options": {
		"notify_audit": false,
		"locked": false,
		"timeout_h": 0,
		"require_full_window": false,
		"notify_no_data": false,
		"renotify_interval": "0",
		"evaluation_delay": 900,
		"thresholds": {
			"critical": 0
		}
	}
}